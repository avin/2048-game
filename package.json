{
	"name": "preact-2048",
	"version": "0.2.0",
	"private": true,
	"scripts": {
		"dev": "craco start",
		"build": "cross-env GENERATE_SOURCEMAP=false TSC_COMPILE_ON_ERROR=true craco build",
		"test": "craco test",
		"check-types": "tsc",
		"lint": "eslint src/**/*.{js,ts,tsx}",
		"stylelint": "stylelint src/**/*.scss",
		"lint:fix": "npm run lint -- --fix",
		"stylelint:fix": "npm run stylelint -- --fix",
		"prettier": "prettier --write \"**/*.{ts,tsx,js,json,css,scss,md}\"",
		"analyze:prepare": "cross-env TSC_COMPILE_ON_ERROR=true craco build",
		"analyze:main": "source-map-explorer 'build/static/js/*.js'",
		"analyze": "run-s analyze:prepare analyze:main"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"jest": {
		"moduleNameMapper": {
			"@/(.*)$": "<rootDir>/src/$1"
		}
	},
	"dependencies": {
		"@craco/craco": "6.1.2",
		"@reduxjs/toolkit": "1.5.1",
		"@testing-library/jest-dom": "5.12.0",
		"@testing-library/react": "11.2.7",
		"@testing-library/user-event": "12.8.3",
		"@types/jest": "26.0.23",
		"@types/node": "12.20.13",
		"@types/react": "17.0.6",
		"@types/react-dom": "17.0.5",
		"@types/react-redux": "7.1.16",
		"clsx": "1.1.1",
		"node-sass": "4.12.0",
		"preact": "10.5.13",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"react-redux": "7.2.4",
		"react-scripts": "4.0.3",
		"typescript": "4.2.4"
	},
	"devDependencies": {
		"@types/webpack-env": "1.16.0",
		"@typescript-eslint/eslint-plugin": "4.24.0",
		"eslint": "7.27.0",
		"eslint-config-airbnb": "18.2.1",
		"eslint-config-airbnb-typescript": "12.3.1",
		"eslint-config-prettier": "8.3.0",
		"eslint-import-resolver-webpack": "0.13.1",
		"eslint-plugin-css-modules": "2.11.0",
		"eslint-plugin-import": "2.23.3",
		"eslint-plugin-jsx-a11y": "6.4.1",
		"eslint-plugin-prettier": "3.4.0",
		"eslint-plugin-react": "7.23.2",
		"eslint-plugin-react-hooks": "4.2.0",
		"eslint-plugin-react-perf": "3.3.0",
		"localhost-certs": "1.0.0",
		"prettier": "2.3.0",
		"stylelint": "13.13.1",
		"stylelint-config-css-modules": "2.2.0",
		"stylelint-config-rational-order": "0.1.2",
		"stylelint-config-standard": "22.0.0",
		"stylelint-order": "4.1.0",
		"stylelint-scss": "3.19.0"
	}
}
